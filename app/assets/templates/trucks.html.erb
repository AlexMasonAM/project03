<!-- This div contains the three filters -->
<div class="container-fluid">
  <div class="row filters">
    <div class="col-xs-6">
      <a href="" ng-click="home.filter='genre'"><div ng-class="{active:(home.filter=='genre')}"class="circle font-secondary" id="genre">genre</div></a>
      <a href="" ng-click="home.filter='distance'"><div ng-class="{active:(home.filter=='distance')}"class="circle font-secondary" id="distance">distance</div></a>
      <a href="" ng-click="home.filter='favorites'"><div ng-class="{active:(home.filter=='favorites')}"class="circle font-secondary" id="favorites">favorites</div></a>
    </div>
    <div class="col-xs-6">
      <div class="filter-display text-center">
        <h1 class="font-secondary white">FILTER BY: <span class="blue">{{home.filter | uppercase}}</span></h1>
        <button class="btn btn-default btn-sm font-primary reset" ng-click="resetFilters()">Reset All</button>

        <div ng-show="home.filter=='genre'">
          <div class="btn-group">
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'All'">All</label>
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'American'">American</label>
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'Asian Fusion'">Asian Fusion</label>
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'Burgers'">Burgers</label>
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'Mexican'">Mexican</label>
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'Vegan'">Vegan</label>
            <label class="btn btn-default font-primary genre" ng-change="applyFilters()" ng-model="home.genre" btn-radio="'Dessert'">Dessert</label>
          </div>
        </div>
        <div ng-show="home.filter=='distance'">
          <div class="btn-group">
            <label class="btn btn-default font-primary distance" ng-change="applyFilters()" ng-model="home.distance" btn-radio="100">Any Distance</label>
            <label class="btn btn-default font-primary distance" ng-change="applyFilters()" ng-model="home.distance" btn-radio="15">15 Miles</label>
            <label class="btn btn-default font-primary distance" ng-change="applyFilters()" ng-model="home.distance" btn-radio="10">10 Miles</label>
            <label class="btn btn-default font-primary distance" ng-change="applyFilters()" ng-model="home.distance" btn-radio="5">5 Miles</label>
            <label class="btn btn-default font-primary distance" ng-change="applyFilters()" ng-model="home.distance" btn-radio="1">1 Mile</label>
          </div>
        </div>
        <div ng-show="home.filter=='favorites'">
          <div class="btn-group">
            <label class="btn btn-default font-primary favorites" ng-model="home.favorites" ng-click="applyFilters()" btn-radio="'All'">Show All</label>
            <label class="btn btn-default font-primary favorites" ng-model="home.favorites" ng-click="applyFilters()" btn-radio="'Favorites'">Only Favorites</label>
          </div>        
        </div>
        <%= image_tag "truck-white.png", width: 100, class:"filter-image" %>
      </div>
    </div>
  </div>
</div>
<div class="black-bg">
  
  <div class="row">
    <div class="col-md-4 col-md-offset-4 centered-results">
      <p class="font-primary h1 blue"><strong>TRUCK</strong></p> 
      <p class="h1 brown">____________</p> 
      <p class="font-secondary h1">RESULTS</p>
      <div class="font-primary h1 marker-count"><br>({{markers.length}})</div>
    </div>
    <div class="col-md-1">
    </div>
  </div>
<!-- Row for the 6 trucks display -->
  <h3 class="font-primary text-center">{{flash}}</h3>
  <div class="row">
    <div class="truck col-md-4 text-center" ng-repeat="t in sixMarkers">
      <a href="#/trucks/{{t.truck.id}}">
        <div class="truck-box">
        <!-- set this divs background image to be the truck image we want -->
        </div> 
      </a> 
        <a href="#/trucks/{{t.truck.id}}"><span class="font-secondary blue h3">{{t.truck.name}}</span></a>
        <span class="brown h3">|</span>
        <span class="font-secondary gray h3"> {{t.distance | number: 1}} miles</span>
    </div>
  </div>

<!-- Pagination controls -->
<pager total-items="markers.length" previous-text="<" next-text=">" items-per-page=6 ng-model="home.currentPage" ng-change="home.pageChanged()"></pager>
  <br>
  <div class="centered">
    <pagination total-items="markers.length" ng-model='home.currentPage' items-per-page=6 ng-change="home.pageChanged()"></pagination>
  </div>
</div>
